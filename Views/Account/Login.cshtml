@model SpendSmart_Second_Web_application_.Models.Login
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form action="Login">
    <label asp-for="Name">Name</label>
    <input class="form-control" asp-for="Name" type="text" placeholder="Write your name" required/>
    <label asp-for="Password">Password</label>
    <input class="form-control" asp-for="Password" type="password" placeholder="Password" required/>
    <button class="btn btn-primary" type="submit">Log in</button>
    </form>

