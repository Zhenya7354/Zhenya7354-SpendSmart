@{
    ViewData["Title"] = "Create or Edit";
}
@model SpendSmart_Second_Web_application_.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit</h1>
</div>

<form asp-action="SaveOrUpdate" asp-controller="Home">
    
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id" />
    <label class="mt-4">Value</label>
    <input class="form-control" type="number" placeholder="0$" asp-for="Value" step="1" required />
    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="Add description" asp-for="Description" />
    <label class="mt-4">Category</label>
    
    <select asp-for="Category">
        <option value="" disabled selected>Not selected</option>
        <option value="Hobby">Hobby</option>
        <option value="Sport">Sport</option>
        <option value="Beauty">Beauty</option>
        <option value="Material things">Material things</option>
    </select><br />

    <button class="btn btn-primary mt-4" type="submit">Ok</button>    
</form>
<div style="position: absolute; top: 10px; right: 10px; display: flex; gap: 10px;">
    <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Sign In</a>
    <a class="btn btn-secondary" asp-controller="Account" asp-action="Register">Sign Up</a>
</div>

